<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewPlayerPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#E91E63"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginLeft="@dimen/left_margin"
        android:textSize="@dimen/heading_one"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/imageViewPlayerPicture"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Auston Matthews" />

    <TextView
        android:id="@+id/textViewPlayerPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:textSize="@dimen/description_size"
        app:layout_constraintLeft_toRightOf="@id/imageViewPlayerPicture"
        app:layout_constraintTop_toTopOf="@id/textViewPlayerName"
        tools:text="Center" />

</android.support.constraint.ConstraintLayout>